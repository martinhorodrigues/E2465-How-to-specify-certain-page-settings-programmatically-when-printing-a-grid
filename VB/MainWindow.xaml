<dxc:DXWindow x:Class="WpfPrintGridPageSettings.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" Title="Window1" Height="400" Width="800" Loaded="Window_Loaded">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="{Binding ElementName=button1, Path=Height}" />
        </Grid.RowDefinitions>

        <dxg:GridControl Name="gridControl1" AutoPopulateColumns="True">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="column1" />
                <dxg:GridColumn FieldName="column2" />
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView AutoWidth="True" />
            </dxg:GridControl.View>
        </dxg:GridControl>
        <Button Grid.Row="1" Name="button1" Content="Print" Click="button1_Click" />
    </Grid>
</dxc:DXWindow>